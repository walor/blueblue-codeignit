<%=render 'sidebar'%>
<div class="span9">
  <h3 class='text-center'>Sub Grupos</h3>

  <%=simple_form_for(@search, html: {class: 'form-search' }) do |f|%>
      <%= f.label :description_contains, "Nombre: " %>
      <%= f.text_field :description_contains, class: 'search-query'%>
      <button type="submit" class="btn">Buscar</button>
  <%end%>
  <table class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
        <th>Codigo</th>
        <th>Nombre</th>
        <th>Grupo</th>
      </tr>
    </thead>
    <tbody>
      <% @sub_groups.each do |sub_group| %>
        <tr>
          <td><%= sub_group.name %></td>
          <td><%= sub_group.description %></td>
          <td><%= sub_group.group.description %></td>
          <td><%= show_link sub_group %></td>
          <td><%= edit_link edit_sub_group_path(sub_group) %></td>
          <td><%= destroy_link sub_group %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br />
  <%=paginate @sub_groups%>
</div>