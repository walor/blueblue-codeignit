<div class="row-fluid">
<div class="span12">
  <p class="text-center font-header"><strong><%= @purchase_order.quotation.requeriment.status_text_order %> Nro. <%=@purchase_order.name%></strong></p>

<div class="span12">
  <div class="span4"><strong>Fecha de <%= @purchase_order.quotation.requeriment.status_text_order %>:</strong></div>
  <div class="span8"><%= l(@purchase_order.created_at) %></div>
</div>

<div class="span12">
  <div class="span4"><strong>Nro Cotization:</strong></div>
  <div class="span8"><%= link_to @purchase_order.quotation.name, @purchase_order.quotation  %></div>
</div>

<div class="span12">
  <div class="span4"><strong>Titulo requerimiento:</strong></div>
  <div class="span8"><%= @purchase_order.quotation.requeriment.description %></div>
</div>

<div class="span12">
  <div class="span4"><strong>Nro Requerimiento:</strong></div>
  <div class="span8"><%= link_to @purchase_order.quotation.requeriment.name, @purchase_order.quotation.requeriment %></div>
</div>

<div class="span12">
  <div class="span4"><strong>Proveedor:</strong></div>
  <div class="span8"><%= @purchase_order.provider.name %></div>
</div>


<div class="span12">
  <div class="span4"><strong>Telefono:</strong></div>
  <div class="span8"><%= @purchase_order.provider.phone %></div>
</div>

<div class="span12">
  <div class="span4"><strong>Direccion:</strong></div>
  <div class="span8"><%= @purchase_order.provider.address %></div>
</div>

<div class="span12">
  <div class="span4"><strong>RUC:</strong></div>
  <div class="span8"><%= @purchase_order.provider.ruc %></div>
</div>


<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Producto</th>
      <th>Unidad</th>
      <th>Modelo</th>
      <th>Marca</th>
      <th>Detalle</th>
      <th>Cantidad</th>
      <th>Precio Unit.</th>
      <th>Precio Total</th>
    </tr>
  </thead>
  <tbody>
    <% @purchase_order.purchase_details.each do |item| %>
      <tr>
        <td><%=item.product_description %></td>
        <td><%= item.product.measurement_unit_name %></td>
        <td><%= item.model %></td>
        <td><%= item.brand.try(:description) %></td>
        <td><%= item.detail %></td>
        <td><%=item.quantity %></td>
        <td><%= number_to_currency(item.price_unit) %></td>
        <td><%= number_to_currency(item.price_total) %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan='7' class='text-right'>Total:</td>
      <td><%= number_to_currency(@purchase_order.total) %></td>
    </tr>
  </tfoot>
</table>

<div class="span12">
  <div class="span3"><strong>Validez:</strong></div>
  <div class="span8"><%= @purchase_order.validity%></div>
</div>

<div class="span12">
  <div class="span3"><strong>Entrega:</strong></div>
  <div class="span8"><%= @purchase_order.delivery %></div>
</div>

<div class="span12">
  <div class="span3"><strong>Forma de pago:</strong></div>
  <div class="span8"><%= @purchase_order.pay_form %></div>
</div>

<div class="span12">
  <div class="span3"><strong>Observaciones:</strong></div>
  <div class="span8"><%= simple_format @purchase_order.observations%></div>
</div>
</div>
</div>