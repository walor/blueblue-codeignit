<legend>Cotizaciones</legend>
<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Producto</th>
      <%@quotations.each do |quotation|%>
        <th><%=quotation.name%><br/><%=quotation.provider.name%></th>
      <%end%>
    </tr>
  </thead>
  <tbody>
    <%@products.each do |product|%>
      <tr>
        <td><%=product.name%></td>
        <%@quotations.each do |quotation|%>
          <td>
            <%=quotation.quotation_items.find_by_product_id(product.id).try(:cost_unit) || "Sin Cotizar"%>
          </td>
        <%end%>
      </tr>
    <%end%>
  </tbody>
</table>