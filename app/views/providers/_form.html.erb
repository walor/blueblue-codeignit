<%= simple_form_for(@provider, :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="row-fluid"><div class="span12"><%= f.input :name, input_html: {class: 'span12'} %></div></div>
    <%= f.input :type_provider, collection: [["Empresa", 1], ["Personal Natural", 2]], as: :radio_buttons, default: 1 %>
    <div id="natural_person">
      <div class="row-fluid"><div class="span12"><%= f.input :first_name, input_html: {class: 'span12'} %></div></div>
      <div class="row-fluid"><div class="span12"><%= f.input :last_name, input_html: {class: 'span12'} %></div></div>
      <div class="row-fluid"><div class="span12"><%= f.input :maiden_name, input_html: {class: 'span12'} %></div></div>
    </div>
    <h4>Datos de ubicaci√≥n</h4>
    <div class="row-fluid"><div class="span12"><%= f.input :ruc, input_html: {class: 'span12'} %></div></div>
    <div class="row-fluid"><div class="span12"><%= f.input :address, input_html: {class: 'span12'} %></div></div>
    <div class="row-fluid"><div class="span12"><%= f.input :resposible, input_html: {class: 'span12'} %></div></div>
    <div class="row-fluid"><div class="span12"><%= f.input :position, input_html: {class: 'span12'} %></div></div>
    <div class="row-fluid"><div class="span12"><%= f.input :phone, input_html: {class: 'span12'} %></div></div>
    <div class="row-fluid"><div class="span12"><%= f.input :cellphone, input_html: {class: 'span12'} %></div></div>
    <div class="row-fluid"><div class="span12"><%= f.input :fax, input_html: {class: 'span12'} %></div></div>
    <div class="row-fluid"><div class="span12"><%= f.input :email, input_html: {class: 'span12'} %></div></div>
    <div class="row-fluid"><div class="span12"><%= f.input :web, input_html: {class: 'span12'} %></div></div>


    <h4>Tipo de empresa</h4>
    <%= f.input :type_company, collection: [["Nacional", 1], ["Extranjera", 2]], as: :radio_buttons, style: "display:inline", default: 1 %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<script> var entity = "provider"; </script>