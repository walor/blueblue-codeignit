<%=render 'sidebar'%>
<div class="span9">
    <h3 class='text-center'>Proveedores</h3>

    <%=simple_form_for(@search, html: {class: 'form-search' }) do |f|%>
        <%= f.label :name_or_ruc_contains, "Nombre o RUC: " %>
        <%= f.text_field :name_or_ruc_contains, class: 'search-query'%>
        <button type="submit" class="btn">Buscar</button>
    <%end%>

    <table class="table table-striped table-hover table-condensed">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Dirección</th>
            <th>Teléfono</th>
            <th>Contacto</th>
            <th>R.U.C.</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
            <% @providers.each do |provider| %>
              <tr>
                <td><%= provider.name %></td>
                <td><%= provider.address %></td>
                <td><%= provider.phone %></td>
                <td><%= provider.resposible %></td>
                <td><%= provider.ruc %></td>
                <td><%= show_link provider %></td>
                <td><%= edit_link edit_provider_path(provider) %></td>
                <td><%= destroy_link provider%></td>
              </tr>
            <% end %>
        </tbody>
    </table>
    <%=paginate @providers%>
</div>