<%=render 'sidebar'%>
<div class="span9">
    <h3 class='text-center'>Almacenes</h3>

    <%=simple_form_for(@search, html: {class: 'form-search' }) do |f|%>
        <%= f.label :name_contains, "Nombre: " %>
        <%= f.text_field :name_contains, class: 'search-query'%>
        <button type="submit" class="btn">Buscar</button>
    <%end%>

    <table class="table table-striped table-hover table-condensed">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Responsable</th>
            <th>Area</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
            <% @ware_houses.each do |ware_house| %>
              <tr>
                <td><%= ware_house.name %></td>
                <td><%= ware_house.responsible.try(:name) %></td>
                <td><%= ware_house.area.try(:name) %></td>
                <td><%= show_link ware_house %></td>
                <td><%= edit_link edit_ware_house_path(ware_house) %></td>
                <td><%= destroy_link ware_house%></td>
              </tr>
            <% end %>
        </tbody>
    </table>
    <%=paginate @ware_houses%>
</div>
