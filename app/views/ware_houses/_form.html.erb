<%= simple_form_for(@ware_house) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<div class="row-fluid"><div class="span12"><%= f.input :name, input_html: {class: 'span12'} %></div></div>
    <div class="row-fluid"><div class="span12"><%= f.input :description, input_html: {class: 'span12'} %></div></div>
    <div class="row-fluid"><div class="span12"><%= f.input :address, input_html: {class: 'span12'} %></div></div>
    <div class="row-fluid"><div class="span6"><%= f.input :telephone, input_html: {class: 'span6'} %></div></div>
    <div class="row-fluid"><div class="span12"><%= f.association :area, input_html: {class: 'span12'}, label: "Area" %></div></div>
  	<div class="row-fluid"><div class="span12"><%= f.input :responsible_id, collection: @responsibles, input_html: {class: 'my_select2 span12'} %></div></div>
    <br>
    <div class="row-fluid"><div class="span12">
      <%= f.input :initial, collection: [["Si", true], ["No", false]], as: :radio_buttons, label: 'inventario inicial', style: "display:inline" %>
    </div></div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>