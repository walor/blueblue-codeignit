<% if @operation_type == 'salidas' %>
    <%= render 'movements/sidebar_out'%>
<% end %>
<div class="span9">
    <h3 class='text-center'>Mis Almacenes</h3>

    <table class="table table-striped table-hover table-condensed">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Responsable</th>
            <th>Area</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
            <% @ware_houses.each do |ware_house| %>
              <tr>
                <td><%= ware_house.name %></td>
                <td><%= ware_house.responsible.try(:name) %></td>
                <td><%= ware_house.area.try(:name) %></td>
                <% if @operation_type == 'salidas' %>
                    <td><%= link_to 'salida', ware_house_new_get_out_path(ware_house.id) %></td>
                <% end %>
                <% if @operation_type == 'initial' %>
                    <td><%= link_to 'Inicial', ware_house_initial_path(ware_house.id) %></td>
                <% end %>
                <% if @operation_type == 'fisico' %>
                    <td><%= link_to 'Inventario Fisico', ware_house_physical_path(ware_house.id) %></td>
                <% end %>
              </tr>
            <% end %>
        </tbody>
    </table>
</div>