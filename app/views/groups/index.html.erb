<%=render 'sidebar'%>
<div class="span9">
  <h3 class='text-center'>Grupos</h3>

  <%=simple_form_for(@search, html: {class: 'form-search' }) do |f|%>
      <%= f.label :description_contains, "Nombre: " %>
      <%= f.text_field :description_contains, class: 'search-query'%>
      <button type="submit" class="btn">Buscar</button>
  <%end%>
  <table class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
        <th>Codigo</th>
        <th>nombre</th>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td><%= group.name %></td>
          <td><%= group.description %></td>
          <td><%= show_link group %></td>
          <td><%= edit_link edit_group_path(group) %></td>
          <td><%= destroy_link group %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br />
  <%=paginate @groups%>
</div>