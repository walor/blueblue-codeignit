<%= simple_form_for(@group, :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="row-fluid"><div class="span12"><%= f.input :name, input_html: {class: 'span12'} %></div></div>
    <div class="row-fluid"><div class="span12"><%= f.input :description, input_html: {class: 'span12'} %></div></div>
    <%= f.input :type_group, collection: [["Servicio", 1], ["Bienes", 2]], as: :radio_buttons, default: 1 %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<script> var entity = "group"; </script>