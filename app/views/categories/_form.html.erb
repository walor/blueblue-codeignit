<%= simple_form_for(@category, :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="row-fluid"><div class="span12"><%= f.input :name, input_html: {class: 'span12'} %></div></div>
    <div class="row-fluid"><div class="span12"><%= f.input :description, input_html: {class: 'span12'} %></div></div>
    <div class="row-fluid"><div class="span12"><%= f.association :sub_group, input_html: {class: 'span12'}, label: "SubGrupo", label_method: :description, value_method: :id %></div></div>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<script> var entity = "category"; </script>