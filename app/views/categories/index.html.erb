<%=render 'sidebar'%>
<div class="span9">
  <h3 class='text-center'>Categorias</h3>

  <%=simple_form_for(@search, html: {class: 'form-search' }) do |f|%>
      <%= f.label :description_contains, "Nombre: " %>
      <%= f.text_field :description_contains, class: 'search-query'%>
      <button type="submit" class="btn">Buscar</button>
  <%end%>
  <table class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
        <th>Codigo</th>
        <th>Nombre</th>
        <th>SubGrupo</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= category.description %></td>
          <td><%= category.sub_group.description %></td>
          <td><%= show_link category %></td>
          <td><%= edit_link edit_category_path(category) %></td>
          <td><%= destroy_link category %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br />
  <%=paginate @categories%>
</div>