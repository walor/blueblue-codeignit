<%= simple_form_for(@brand, :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description, input_html: {class: 'span12'} %>
    <%= f.input :long_description, input_html: {class: 'span12'} %>

    <%= f.input :observation, input_html: {class: 'span12'} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
