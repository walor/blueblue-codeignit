<%=render 'sidebar'%>
<div class="span9">
    <h3 class='text-center'>Marcas</h3>

    <%=simple_form_for(@search, html: {class: 'form-search' }) do |f|%>
        <%= f.label :name_or_description_contains, "Nombre o descripción: " %>
        <%= f.text_field :name_or_description_contains, class: 'search-query'%>
        <button type="submit" class="btn">Buscar</button>
    <%end%>

    <table class="table table-striped table-hover table-condensed">
        <thead>
          <tr>
            <th>Código</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
            <% @brands.each do |brand| %>
              <tr>
                <td><%= brand.name %></td>
                <td><%= brand.description %></td>
                <td><%= brand.long_description %></td>
                <td><%= show_link brand %></td>
                <td><%= edit_link edit_brand_path(brand) %></td>
                <td><%= destroy_link brand %></td>
              </tr>
            <% end %>
        </tbody>
    </table>
    <%=paginate @brands%>
</div>
