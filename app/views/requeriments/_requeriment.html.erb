<div class="row-fluid">
  <div class="span12">
    <p class="text-center font-header"><strong>Requerimiento Nro. <%=@requeriment.name%></strong></p>

    <div class="span12">
      <div class="span4"><strong>Titulo:</strong></div>
      <div class="span8"><%= @requeriment.description %></div>
    </div>

    <% if @requeriment.area %>
      <div class="span12">
        <div class="span4"><strong>√Årea solicitante:</strong></div>
        <div class="span8"><%= @requeriment.area.name %></div>
      </div>
    <% end %>

    <% if @requeriment.ware_house %>
      <div class="span12">
        <div class="span4"><strong>Almacen:</strong></div>
        <div class="span8"><%= @requeriment.ware_house.name %></div>
      </div>
    <% end %>

    <div class="span12">
      <div class="span4"><strong>Solicitante:</strong></div>
      <div class="span8"><%= @requeriment.responsible.name %></div>
    </div>

    <div class="span12">
      <div class="span4"><strong>Nro. Referencia:</strong></div>
      <div class="span8"><%= @requeriment.reference %></div>
    </div>

    <div class="span12">
      <div class="span4"><strong>Fecha solicitud:</strong></div>
      <div class="span8"><%= l(@requeriment.created_at) %></div>
    </div>

    <div class="span12">
      <div class="span4"><strong>Fecha limite de entrega:</strong></div>
      <div class="span8"><%=  l(@requeriment.deadline) %></div>
    </div>

    <div class="span12">
      <div class="span4"><strong>Nota:</strong></div>
      <div class="span8"><%= @requeriment.observation %></div>
    </div>

    <table class="table table-striped table-condensed table_summary">
      <thead>
        <tr>
          <th>Producto</th>
          <th>Cantidad</th>
          <th>Unidad</th>
          <th>Marca</th>
          <th>Modelo</th>
          <th>Detalle</th>
        </tr>
      </thead>
      <tbody>
        <% @requeriment.requeriment_items.each do |item| %>
          <tr>
            <td><%=item.product.description %></td>
            <td><%=item.quantity%></td>
            <td><%=item.product.measurement_unit_name %></td>
            <td><%=item.brand.try(:description) %></td>
            <td><%=item.model %></td>
            <td><%=item.detail %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>