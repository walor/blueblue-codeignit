<div class="row-fluid">
  <div class="span12">
    <p class="text-center font-header"><strong>REQUISICION Nro. <%=@requeriment.name%></strong></p>

    <table class="table_summary table">
      <tr>
        <td><strong>Referencia:</strong></td>
        <td><%= @requeriment.description %></td>
        <td><strong>Nro. Referencia:</strong></td>
        <td><%= @requeriment.reference %></td>
      </tr>

      <tr>
        <td><strong>Fecha de solicitud:</strong></td>
        <td><%= l(@requeriment.created_at) %></td>
        <td><strong>Fecha limite de entrega:</strong></td>
        <td><%= l(@requeriment.deadline) %></td>
      </tr>

      <tr>
        <td><strong>Area que solicita:</strong></td>
        <td><%= @requeriment.area.name %></td>
        <td><strong>Solicitante:</strong></td>
        <td><%= @requeriment.responsible.name %></td>
      </tr>

      <tr>
        <td><strong>Tipo de Requisicion:</strong></td>
        <td><%= @requeriment.type_text %></td>
        <td><strong>Almacen:</strong></td>
        <td><%= @requeriment.ware_house.name %></td>
      </tr>

      <tr>
        <td><strong>Nota:</strong></td>
        <td><%= @requeriment.observation %></td>
      </tr>
    </table>

    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th>Producto</th>
          <th>Cantidad</th>
          <th>Unidad</th>
          <th>Marca</th>
          <th>Modelo</th>
          <th>Detalle</th>
        </tr>
      </thead>
      <tbody>
        <% @requeriment.requeriment_items.each do |item| %>
          <tr>
            <td><%=item.product.description %></td>
            <td><%=item.quantity%></td>
            <td><%=item.product.measurement_unit_name %></td>
            <td><%=item.brand.try(:description) %></td>
            <td><%=item.model %></td>
            <td><%=item.detail %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<footer>
  <hr>
  <p>Solicitanteee: <%= @requeriment.responsible.name %></p>
</footer>