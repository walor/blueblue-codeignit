<%= simple_form_for(@user, :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="row-fluid"><div class="span12"><%= f.input :firstname, input_html: {class: 'span12'} %></div></div>
    <div class="row-fluid"><div class="span12"><%= f.input :lastname, input_html: {class: 'span12'} %></div></div>
    <div class="row-fluid">
      <div class="span6"><%= f.input :password, input_html: {class: 'span12'} %></div>
      <div class="span6"><%= f.input :password_confirmation, input_html: {class: 'span12'} %></div>
    </div>
    <div class="row-fluid"><div class="span12"><%= f.input :email, input_html: {class: 'span12'} %></div></div>
    <div class="row-fluid"><div class="span12"><%= f.association :role, input_html: {class: 'span12'} %></div></div>
    <div class="row-fluid"><div class="span12"><%= f.association :area, input_html: {class: 'span12'} %></div></div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
