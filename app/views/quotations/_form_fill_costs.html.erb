<%= simple_form_for(@quotation, url: save_fill_costs_quotation_url(@quotation)) do |f| %>
  <%= f.error_notification %>

  <div class="span12">
    <div class="span4"><strong>Nro. Cotizacion:</strong></div>
    <div class="span8"><%= link_to @quotation.name, @quotation %></div>
  </div>

  <div class="span12">
    <div class="span4"><strong>Proveedor:</strong></div>
    <div class="span8"><%= @quotation.provider.name %></div>
  </div>

  <div class="span12">
    <div class="span4"><strong>Proveedor RUC:</strong></div>
    <div class="span8"><%= @quotation.provider.ruc %></div>
  </div>

  <div class="span12">
    <div class="span4"><strong>Fecha creacion de cotizacion:</strong></div>
    <div class="span8"><%= @quotation.created_at %></div>
  </div>

  <div class="form-inputs">

    <%=f.input :validity%>
    <%=f.input :delivery%>
    <%=f.input :pay_form%>

    <table class="table table-striped table-hover table-condensed table-nested">
      <thead>
        <tr>
          <th>Producto</th>
          <th>Cantidad</th>
          <th>Precio Unit.</th>
          <th>Marca</th>
          <th>Modelo</th>
          <th>Detalle</th>
        </tr>
      </thead>
      <tbody>
        <%=f.simple_fields_for :quotation_items do |quotation_item_form|%>
          <%= render 'quotation_item_fill_costs_fields', f: quotation_item_form %>
        <%end%>
      </tbody>
    </table>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>