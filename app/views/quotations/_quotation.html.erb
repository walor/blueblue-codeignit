<div class="row-fluid">
  <div class="span12">
    <h3 class="text-center font-header">SOLICITUD DE COTIZACION Nro. <%= @quotation.name%></h3>

    <div class="span12">
      <div class="span4"><strong>Nro. Requerimiento:</strong></div>
      <div class="span7"><%= link_to @quotation.requeriment.name, @quotation.requeriment %></div>
    </div>

    <div class="span12">
      <div class="span4"><strong>Proveedor:</strong></div>
      <div class="span7"><%= @quotation.provider.name %></div>
    </div>

    <div class="span12">
      <div class="span4"><strong>Contacto:</strong></div>
      <div class="span7"><%= @quotation.provider.resposible %></div>
    </div>

    <div class="span12">
      <div class="span4"><strong>Ruc:</strong></div>
      <div class="span7"><%= @quotation.provider.ruc %></div>
    </div>

    <div class="span12">
      <div class="span4"><strong>Direccion:</strong></div>
      <div class="span7"><%= @quotation.provider.address %></div>
    </div>

    <div class="span12">
      <div class="span4"><strong>Telefono:</strong></div>
      <div class="span7"><%= @quotation.provider.phone %></div>
    </div>

    <div class="span12">
      <div class="span4"><strong>Fecha creacion cotizacion:</strong></div>
      <div class="span7"><%= l(@quotation.created_at) %></div>
    </div>

    <div class="span12">
      <div class="span4"><strong>Fecha estimada de entrega:</strong></div>
      <div class="span7"><%= l @quotation.requeriment.deadline %></div>
    </div>

    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th>Producto</th>
          <th>Cantidad</th>
          <th>Unidad</th>
          <th>Precio Unitario</th>
          <th>Total</th>
          <th>Modelo</th>
          <th>Marca</th>
          <th>Detalle</th>
        </tr>
      </thead>
      <tbody>
        <% @quotation.quotation_items.each do |item| %>
          <tr>
            <td><%= item.product.description%></td>
            <td><%= item.quantity%></td>
            <td><%= item.product.measurement_unit_name %></td>
            <td><%= number_to_currency(item.cost_unit) %></td>
            <td><%= number_to_currency(item.cost_total) %></td>
            <td><%= item.model %></td>
            <td><%= item.brand.try(:description) %></td>
            <td><%= item.detail %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="span12">
      <div class="span4"><strong>Validez:</strong></div>
      <div class="span7"><%= @quotation.validity%></div>
    </div>
    <div class="span12">
      <div class="span4"><strong>Entrega:</strong></div>
      <div class="span7"><%=@quotation.delivery%></div>
    </div>
    <div class="span12">
      <div class="span4"><strong>Forma de pago:</strong></div>
      <div class="span7"><%=@quotation.pay_form%></div>
    </div>

    <div class="span12">
      <div class="span4"><strong>Observaciones:</strong></div>
      <div class="span7"><%= simple_format @quotation.observations%></div>
    </div>
  </div>
</div>